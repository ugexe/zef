{
    "ConfigVersion" : "1",
    "RootDir"  : "$*HOME/.zef",
    "StoreDir" : "$*HOME/.zef/store",
    "TempDir"  : "$*HOME/.zef/tmp",
    "License" : {
        "whitelist" : "*",
        "blacklist" : []
    },
    "ContentStorage" : [
        { 
            "short-name" : "cached",
            "enabled" : 1,
            "module" : "Zef::ContentStorage::LocalCache",
            "default" : 1,
            "options" : { }
        },
        {
            "short-name" : "p6c",
            "enabled" : 1,
            "module" : "Zef::ContentStorage::P6C",
            "default" : 1,
            "options" : {
                "auto-update" : 0,
                "mirrors" : [
                    "git://github.com/ugexe/Perl6-ecosystems.git",
                    "http://ecosystem-api.p6c.org/projects.json"
                ]
            }
        },
        {
            "short-name" : "cpan",
            "enabled" : 0,
            "module" : "Zef::ContentStorage::CPAN",
            "options" : {
                "mirrors" : ["http://hack.p6c.org:5000/v0/release/"]
            }
        }
    ],
    "Fetch" : [
        {
            "short-name" : "git",
            "module" : "Zef::Shell::git",
            "options" : {
                "scheme" : "https"
            }
        },
        {
            "short-name" : "path",
            "module" : "Zef::Fetch::Path"
        },
        {
            "short-name" : "wget",
            "module" : "Zef::Shell::wget"
        },
        {
            "short-name" : "curl",
            "module" : "Zef::Shell::curl"
        },
        {
            "short-name" : "pswebrequest",
            "module" : "Zef::Shell::PowerShell::download"
        }
    ],
    "Extract" : [
        {
            "short-name" : "git",
            "module" : "Zef::Shell::git",
            "comment" : "used to checkout (extract) specific tags/sha1/commit/branch from a git repo"
        },
        {
            "short-name" : "path",
            "module" : "Zef::Fetch::Path",
            "comment" : "if this goes before git then git wont be able to extract/checkout local paths because this reaches it first :("
        },
        {
            "short-name" : "tar",
            "module" : "Zef::Shell::tar"
        },
        {
            "short-name" : "p5tar",
            "module" : "Zef::Shell::p5tar"
        },
        {
            "short-name" : "unzip",
            "module" : "Zef::Shell::unzip"
        },
        {
            "short-name" : "psunzip",
            "module" : "Zef::Shell::PowerShell::unzip"
        }
    ],
    "Test" : [
        {
            "short-name" : "tap-harness",
            "module" : "Zef::Test::TAPHarness",
        },
        {
            "short-name" : "prove6",
            "enabled" : 0,
            "module" : "Zef::Shell::prove6",
            "comment" : "Not really needed anymore due to Zef::Test::TAPHarness"
        },
        {
            "short-name" : "prove",
            "module" : "Zef::Shell::prove"
        },
        {
            "short-name" : "default-tester",
            "module" : "Zef::Shell::Test"
        }
    ]
}
